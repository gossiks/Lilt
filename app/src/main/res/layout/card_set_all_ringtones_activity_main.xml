<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/card_switch_set_all_ringtones_activity_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="72dp"
            android:layout_marginStart="72dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"></android.support.v7.widget.SwitchCompat>
        <com.romainpiel.shimmer.ShimmerTextView
            android:id="@+id/card_set_all_telephones_label__activity_main"
            android:text="Set all ringtones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444"
            android:textSize="25sp"
            android:layout_marginLeft="42dp"
            android:layout_marginStart="42dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/progressBar"
            android:layout_toEndOf="@+id/progressBar" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/card_switch_set_all_ringtones_activity_main"
            android:layout_alignStart="@+id/card_switch_set_all_ringtones_activity_main" />

    </RelativeLayout>


</android.support.v7.widget.CardView>