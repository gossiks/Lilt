<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ringtone_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Choose your ringtone here"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/change_ringtone_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar_ringtone_upload_mainactivity"
            android:indeterminate="false"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/ringtone_main"
            android:layout_alignBottom="@+id/change_ringtone_main"
            android:layout_marginRight="65dp"
            android:layout_marginEnd="65dp" />
    </RelativeLayout>


</android.support.v7.widget.CardView>