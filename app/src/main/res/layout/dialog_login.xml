<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter your phone number for authorization"
        android:id="@+id/textView"
        android:layout_marginBottom="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <com.iangclifton.android.floatlabel.FloatLabel
        android:id="@+id/telephone_number_dialog_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" 7-926-123-45-67"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@android:string/ok"
        android:id="@+id/ok_dialog_login"
        android:layout_below="@+id/telephone_number_dialog_login"
        android:layout_centerHorizontal="true" />


</RelativeLayout>